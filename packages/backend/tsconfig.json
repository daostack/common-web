{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitReturns": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "@toolkits": [
        "./domain/toolkits/index"
      ],
      "@graph": [
        "./graph/index"
      ],
      "@env/*": [
        "./domain/env/*"
      ],
      "@secrets/*": [
        "./domain/env/secrets/*"
      ],
      "@services": [
        "./core/users/index"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
