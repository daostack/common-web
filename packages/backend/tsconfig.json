{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitReturns": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "@toolkits": [
        "./domain/toolkits/index"
      ],
      "@graph": [
        "./graph/index"
      ],
      "@constants/*": [
        "./domain/constants/*"
      ],
      "@constants": [
        "./domain/constants/index"
      ],
      "@errors": [
        "./domain/errors/index"
      ],
      "@secrets/*": [
        "./domain/constants/secrets/*"
      ],
      "@services": [
        "./core/services",
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
