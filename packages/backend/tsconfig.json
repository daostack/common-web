{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitReturns": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@toolkits": [
        "./domain/toolkits/index"
      ],
      "@graph": [
        "./graph/index"
      ],
      "@constants/*": [
        "./domain/constants/*"
      ],
      "@constants": [
        "./domain/constants/index"
      ],
      "@errors": [
        "./domain/errors/index"
      ],
      "@secrets/*": [
        "./domain/constants/secrets/*"
      ],
      "@services": [
        "./core/services"
      ],
      "@validation": [
        "./domain/validation/index"
      ],
      "@circle/*": [
        "./domain/clients/circle/*"
      ],
      "@clients": [
        "./domain/clients/index"
      ],
      "@utils": [
        "./domain/utils/index"
      ],
      "@utils/*": [
        "./domain/utils/*"
      ],
      "@queues": [
        "./queue/index"
      ],
      "@votes/*": [
        "./core/votes/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
