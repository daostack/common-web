{
  "name": "@common/firebase",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run emulator",
    "deploy": "./env/env.sh -check && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "deploy:relayer": "./env/env.sh -check && firebase deploy --only functions:relayer",
    "deploy:notification": "./env/env.sh -check  && firebase deploy --only functions:notification",
    "deploy:graphql": "./env/env.sh -check && firebase deploy --only functions:graphql",
    "deploy:mangopay": "./env/env.sh -check && firebase deploy --only functions:mangopay",
    "emulator": "open -a Safari http://localhost:4000 && firebase emulators:start --import ./firestore/data",
    "emulator:functions": "open -a Safari http://localhost:4000 && firebase emulators:start --only functions",
    "use:staging": "firebase use staging && ./env/env.sh -stg",
    "use:production": "firebase use production && ./env/env.sh -prod",
    "data:backup": "./firestore/data.sh -backup",
    "data:update": "./firestore/data.sh -update",
    "env": "./env/env.sh",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@daostack/arc.js": "2.0.0-experimental.48",
    "@sendgrid/mail": "^7.2.1",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link": "^1.2.14",
    "apollo-link-context": "^1.0.20",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.17",
    "apollo-link-ws": "^1.0.20",
    "apollo-utilities": "^1.3.3",
    "axios": "^0.19.0",
    "cors": "^2.8.5",
    "deepmerge": "^4.2.2",
    "eslint": "^7.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "express": "^4.17.1",
    "firebase": "^7.14.5",
    "firebase-admin": "~8.10.0",
    "firebase-functions": "^3.6.2",
    "firebase-tools": "^8.4.1",
    "graphql": "^15.0.0",
    "graphql-tag": "^2.10.3",
    "mangopay2-nodejs-sdk": "^1.13.0",
    "module-alias": "^2.2.2",
    "node-fetch": "^2.6.0",
    "promise-retry": "^2.0.1",
    "subscriptions-transport-ws": "^0.9.16"
  },
  "_moduleAliases": {
    "@env": "./env"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.1.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  }
}
