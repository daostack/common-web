{
  "name": "@common/firebase",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "rimraf ./functions/dist/**/* && tsc -p tsconfig.json",
    "build:watch": "rimraf ./functions/dist/**/* && tsc -p tsconfig.json --watch",
    "dev": "concurrently -n \"Tests,Emulator,Compiler\" \"yarn test:watch\" \"yarn emulator\" \"nodemon\"",
    "lint": "eslint .",
    "clean": "find ./ -name '*.log' -delete",
    "logs": "firebase functions:log",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "yarn build && yarn emulator",
    "deploy:staging": "yarn use:staging && ./env/env.sh -check && firebase deploy --only functions",
    "deploy:production": "yarn use:production && ./env/env.sh -check && firebase deploy --only functions",
    "emulator": "firebase emulators:start --import ./firestore/data",
    "emulator:functions": "open -a Safari http://localhost:4000 && firebase emulators:start --only functions",
    "emulator:kill": "kill $(lsof -t -i:8080) & kill $(lsof -t -i:8085) & kill $(lsof -t -i:9000) & kill $(lsof -t -i:4000)",
    "data:backup": "./firestore/data.sh -backup",
    "data:update": "./firestore/data.sh -update",
    "env": "./env/env.sh",
    "use:ci": "./env/env.sh -dev && firebase use staging",
    "use:dev": "./env/env.sh -dev",
    "use:staging": "firebase use staging && ./env/env.sh -stg",
    "use:production": "firebase use production && ./env/env.sh -prod",
    "ci:test": "yarn build && firebase emulators:exec 'yarn test'",
    "ci:setup": "yarn use:ci",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "yarn test --collectCoverage",
    "test:badges": "yarn test:coverage && jest-coverage-badges --output \"./docs/assets/badges\"",
    "precommit": "lint-staged && yarn test",
    "script:deployTestContracts": "node scripts/deployTestContracts.js"
  },
  "engines": {
    "node": "10"
  },
  "nodemonConfig": {
    "ext": "*",
    "exec": "yarn compile",
    "watch": [
      "functions/src/*"
    ]
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.0.3",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.10",
    "@types/shelljs": "^0.8.8",
    "@types/sinon": "^9.0.5",
    "@types/yup": "^0.29.9",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "babel-jest": "^26.3.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.8.1",
    "eslint-plugin-promise": "^4.2.1",
    "firebase-functions-test": "^0.2.1",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-coverage-badges": "^1.1.2",
    "lint-staged": "^10.2.11",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.4",
    "sinon": "^9.0.3",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "private": true,
  "workspaces": [
    "functions"
  ],
  "dependencies": {
    "shelljs": "^0.8.4"
  }
}
