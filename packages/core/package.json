{
  "name": "@common/core",
  "version": "1.9.10-rc.0",
  "author": "Alexander Ivanov @alexander2001i",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register -r dotenv/config --transpile-only --no-notify src/index.ts",
    "compile": "tsc -p tsconfig.json && yarn fix:paths",
    "compile:watch": "tsc -p tsconfig.json --watch & nodemon",
    "fix:paths": "tscpaths -p tsconfig.json -s ./src -o ./dist",
    "start": "node -r dotenv/config dist/index.js"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "prisma": "2.18.0",
    "ts-node-dev": "^1.1.6",
    "tscpaths": "^0.0.9",
    "typescript": "^4.2.3",
    "@types/request-ip": "^0.0.35",
    "@types/uuid": "^8.3.0"
  },
  "nodemonConfig": {
    "watch": [
      "dist"
    ],
    "exec": "yarn fix:paths",
    "delay": 2000
  },
  "dependencies": {
    "@common/queues": "^1.9.10-rc.0",
    "@prisma/client": "2.18.0",
    "tsconfig-paths": "^3.9.0",
    "winston": "^3.3.3",
    "winston-slack-webhook-transport": "^2.0.1",
    "zod": "^1.11.13",
    "firebase-admin": "^9.5.0",
    "date-fns": "^2.19.0",
    "dotenv": "^8.2.0",
    "axios": "^0.21.1"
  }
}
