model Notification {
  id String @id @default(uuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  type       NotificationType
  seenStatus NotificationSeenStatus @default(NotSeen)

  user   User   @relation(fields: [userId], references: [id])
  userId String

  // Optional Links
  common   Common?
  proposal Proposal?
}